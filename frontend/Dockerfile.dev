FROM oven/bun:1

WORKDIR /app

# Copy package files
COPY package.json bun.lock ./

# Install dependencies and explicitly add ARM64 Rollup support
RUN bun install && \
    bun add -D @rollup/rollup-linux-arm64-gnu

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Run development server
CMD ["bun", "run", "dev", "--host"]
